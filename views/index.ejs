<%- include("header.ejs"); -%>
<body>
    <div style="text-align:center">
        <a href="/"><button class="btn1" >Home</button></a>
        <% ls.forEach(element=> { %>
        <a href="/<%= element.name %>"><button class="btn1" ><%= element.name %></button></a>
        <% }); %> 
    </div>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">
        <% items.forEach(element=> { %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="id" value="<%= element._id %>" onChange="this.form.submit()"/>
                    <input type="hidden" name="listname" value="<%= listTitle %>"></input> 
                    <p><%= element.name %></p>
                </div>
            </form>
        <% }); %>    
    </div>

    <div class="box">
        <form action="/" method="POST">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off" />
            <button type="submit" class="btn" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>

    <div style="text-align:center">
        <form action="/deletelist" method="POST">
            <button type="submit" class="btn1" name="list" value="<%= listTitle %>" >Delete</button>
        </form>
        
   </div>
</body>
<%- include("footer.ejs"); -%>